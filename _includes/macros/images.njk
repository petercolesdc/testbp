{% macro standardResize(path, alias, altTag) %}
	{% if meta.url === "" %}
		{% if alias %}
			<img src="{{ meta.url }}/assets/img/{{ path }}{{ alias }}" alt="{{ altTag }}">
		{% else %}
			<img src="{{ meta.url }}/assets/img/Fallback.jpg" alt="The Equinix Logo on a light background">
		{% endif %}
	{% else %}
		{% if alias %}
			{% image "./assets/img/"+path+alias, altTag %}
		{% else %}
			{% image "./assets/img/articles/Fallback.jpg", "The Equinix Logo on a light background" %}
		{% endif %}
	{% endif %}
{% endmacro %}

