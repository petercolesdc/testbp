        {% if alias %}
            <img src="{{ meta.url }}/assets/avatars/{{ path }}{{ alias }}" alt="{{ altTag }}">
        {% else %}
            <!-- Fallback here -->
            <img src="{{ meta.url }}/assets/avatars/Fallback.jpg" alt="{{ altTag }}">
        {% endif %}
    {% else %}
        {% if alias %}
            {% imageThumb "./assets/avatars/"+path+alias, altTag %}
        {% else %}
            <!-- Fallback here -->
            <img src="{{ meta.url }}/assets/avatars/Fallback.jpg" alt="{{ altTag }}">
        {% endif %}
    {% endif %}
{% endmacro %}
